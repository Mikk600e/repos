<Window x:Class="PizzaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="NewPizza" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="390,265,0,0" Click="NewPizza_Click"/>
        <ComboBox x:Name="SizeBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" ItemsSource ="{Binding Path=Anders}" SelectedItem="{Binding Path=Size}"/>

    </Grid>
</Window>
